<examples-layout>
  <@item title="Switch">

    <id/switchId/>

    <app-switch/ref|api| id=switchId>
      <if=api.isChecked>
        On
      </if>
      <else>Off</else>
    </app-switch>

    <pre>${JSON.stringify(
      {
        isChecked: ref.isChecked,
        isDisabled: ref.isDisabled,
        isFocused: ref.isFocused,
      },
      null,
      2,
    )}</pre>
  </@item>
</examples-layout>
